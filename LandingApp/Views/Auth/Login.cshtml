@model LandingApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "ورود به سامانه";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود به سامانه سندیار</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/fonts.css" rel="stylesheet">
    <link href="~/css/LoginStyle.css" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <!-- لوگو -->
            <svg width="160" height="160" viewBox="0 0 160 160" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" stop-color="#4CC9F0" />
                        <stop offset="50%" stop-color="#4361EE" />
                        <stop offset="100%" stop-color="#3A0CA3" />
                    </linearGradient>
                    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
                        <feDropShadow dx="0" dy="8" stdDeviation="10" flood-color="rgba(67, 97, 238, 0.35)" />
                    </filter>
                </defs>

                <!-- Shield Background -->
                <path d="M80,20 L140,50 V110 L80,140 L20,110 V50 Z"
                      fill="url(#gradient)" filter="url(#shadow)"
                      stroke="#fff" stroke-width="2" />

                <!-- Document Icon (Modern lines) -->
                <g stroke="#FFF" stroke-width="3" stroke-linecap="round">
                    <line x1="58" y1="58" x2="102" y2="58" />
                    <line x1="58" y1="72" x2="102" y2="72" />
                    <line x1="58" y1="86" x2="102" y2="86" />
                    <line x1="58" y1="58" x2="58" y2="86" />
                </g>

                <!-- Lock Icon -->
                <circle cx="80" cy="64" r="9" stroke="#FFF" stroke-width="2" fill="none" />
                <rect x="75" y="72" width="10" height="12" rx="2" fill="#FFF" />

                <!-- Branding Text -->
                <text x="80" y="122" font-family="Vazirmatn" font-size="18" fill="#FFF" font-weight="700" text-anchor="middle">سندیار</text>
                <text x="80" y="150" font-family="Vazirmatn" font-size="10" fill="#FFF" text-anchor="middle" opacity="0.9">پلتفرم اسناد ایمن</text>
            </svg>

            <h4>ورود به سامانه سندیار</h4>
        </div>
        <div class="login-body">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Username" class="form-label">نام کاربری</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="نام کاربری خود را وارد کنید" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">رمز عبور</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="رمز عبور خود را وارد کنید" />
                        <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <button type="submit" class="btn btn-primary btn-login w-100">
                    <i class="fas fa-sign-in-alt"></i> ورود به سامانه
                </button>

                <div class="footer-links">
                    <a href="#">رمز عبور را فراموش کرده‌ام</a>
                    <a href="#">ثبت نام در سامانه</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');

        togglePassword.addEventListener('click', function (e) {
          const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
          password.setAttribute('type', type);
          this.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>

